<h1>Welcome to Stuft</h1>

<h2><%= "#{@user.username}'s Profile Page" %></h2>
<%= link_to image_tag(@user.profile_pic, :type => :instagram_name, :width => 120, :height => 120, :crop => :fill), @user.instagram_url %>

<h3>Your Plates</h3>
<% @user.plates.each do |plate| %>
  <div class="photo">
    <%= link_to image_tag(plate.url), plate_path(plate), id: "#{plate.id}" %>
    <%= plate.description %>
  </div>
<% end %>

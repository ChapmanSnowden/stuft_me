<% if current_user %>
  <h2 class="col-lg-6">Welcome, <%= current_user.username %>!</h2>
<% end %>

<% @all_plates.each do |plate| %>
  <div class="photo">
    <%= link_to image_tag(plate.url, class: "index-photo"), plate_path(plate), id: "#{plate.id}" %>
    <%= plate.description %>
  </div>
<% end %>